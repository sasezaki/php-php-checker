namespace Teto\PHPChecker;

include_once __DIR__ . '/../vendor/autoload.php';

call_user_func(
    function () {
        $cli = new CLI;
        $cli->exec('check_dir', [
                'namespace' => $_SERVER['argv'][1],
                'base_dir'  => $_SERVER['argv'][2],
            ]);
    }
);
